{
    "compilerOptions": {
        "lib": [
            "dom",
            "esNext"
        ],
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "typeRoots": ["node_modules/@types", "src/typings"],
        "types" : ["webpack-env", "node"]
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "node_modules/@types/jest"
    ]
}
